  margin: 0;
  height: 100vh;
  background: linear-gradient(135deg, #ff758c, #ff7eb3);
  font-family: Arial, sans-serif;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

/* Main container */
.container {
  z-index: 5;
  padding: 20px;
}

h1 {
  color: #fff;
  font-size: clamp(1.8rem, 5vw, 2.4rem);
  margin-bottom: 25px;
}

/* Buttons */
button {
  padding: 14px 32px;
  font-size: 1.1rem;
  border-radius: 30px;
  border: none;
  cursor: pointer;
}

#yesBtn {
  background: #ff2d55;
  color: white;
}

#noBtn {
  background: white;
  color: #ff2d55;
  position: absolute;
  transition: transform 0.15s ease;
}

/* Message */
#message {
  display: none;
  margin-top: 25px;
  font-size: 1.8rem;
  color: white;
}

/* Floating hearts */
.heart {
  position: absolute;
  width: 35px;
  height: 35px;
  background: red;
  transform: rotate(-45deg);
  animation: float linear infinite;
  opacity: 0.9;
}

.heart::before,
.heart::after {
  content: "";
  position: absolute;
  width: 35px;
  height: 35px;
  background: red;
  border-radius: 50%;
}

.heart::before {
  top: -18px;
  left: 0;
}

.heart::after {
  left: 18px;
  top: 0;
}

@keyframes float {
  from {
    transform: translateY(110vh) rotate(-45deg);
  }
  to {
    transform: translateY(-120px) rotate(-45deg);
  }
}

/* Touch cursor */
.cursor {
  position: fixed;
  width: 18px;
  height: 18px;
  background: rgba(255,255,255,0.95);
  border-radius: 50%;
  pointer-events: none;
  transform: translate(-50%, -50%);
  z-index: 999;
